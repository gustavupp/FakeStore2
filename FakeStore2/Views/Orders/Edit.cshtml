@*@model FakeStore2.Models.OrdersModel*@
@model FakeStore2.ViewModel.OrderAndCustomerListViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Editing order: @Model.Order.OrderId</h3>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Order.OrderId)

        <div class="form-group">
            @Html.LabelFor(model => model.Customers, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(c => c.Customers, new SelectList(Model.Customers, "CostumerId","FirstName"), htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Customers, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Order.OrderDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Order.OrderDate, new { htmlAttributes = new {  @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Order.OrderDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Order.Total, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Order.Total, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Order.Total, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="display: flex;">
            <div class="col-md-offset-2 col-md-1">
                @Html.ActionLink("Back", "Index", null, htmlAttributes: new {@class="btn btn-default"})
            </div>
                <div>
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>
        </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
