@model IEnumerable<FakeStore2.Models.OrdersModel>

@{
    ViewBag.Title = "CostumerOrders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Costumer Orders</h2>
<br/>
<table class="table table-responsive table-hover">
    <thead class="bg-info">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                Total
            </th>
            <th>
                Name
            </th>
            <th></th>
        </tr>
    </thead>
    
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td>
                    $@Html.DisplayFor(modelItem => item.Total)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Costumer)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.OrderId }, htmlAttributes: new {@class="btn btn-sm btn-default"})
                    @Html.ActionLink("Details", "Details", new { id = item.OrderId }, htmlAttributes: new { @class = "btn btn-sm btn-default" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.OrderId }, htmlAttributes: new { @class = "btn btn-sm btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
<br />
<div>
    <button class="btn btn-default" onclick="history.back()">Back</button>
    <a>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
    </a>
</div>


